<?xml version="1.0" encoding="UTF-8"?>
<cronentries>
  <cron>
    <url>/cron/UpdateStatusServlet</url>
    <description>Update the Twitter status</description>
    <schedule>every 30 minutes from 10:00 to 16:00</schedule>
  </cron>
  <cron>
    <url>/cron/RespondServlet</url>
    <description>Check and respond to Twitter user</description>
    <schedule>every 5 minutes from 09:00 to 20:00</schedule>
  </cron>
  <cron>
    <url>/cron/BotherSomeoneServlet</url>
    <description>Bother a random Twitter user</description>
    <schedule>every 10 minutes from 12:00 to 14:00</schedule>
  </cron>
</cronentries>
