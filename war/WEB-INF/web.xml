<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>BaconbotUpdateEnglishServlet</servlet-name>
		<servlet-class>baconbot_daloonik.BaconbotUpdateEnglishServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BaconbotUpdateEnglishServlet</servlet-name>
		<url-pattern>/cron/BaconbotUpdateEnglishServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>BaconbotUpdateFrenchServlet</servlet-name>
		<servlet-class>baconbot_daloonik.BaconbotUpdateFrenchServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BaconbotUpdateFrenchServlet</servlet-name>
		<url-pattern>/cron/BaconbotUpdateFrenchServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>BaconbotResponseServlet</servlet-name>
		<servlet-class>baconbot_daloonik.BaconbotResponseServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BaconbotResponseServlet</servlet-name>
		<url-pattern>/cron/BaconbotResponseServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>BaconbotBotherSomeoneServlet</servlet-name>
		<servlet-class>baconbot_daloonik.BaconbotBotherSomeoneServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BaconbotBotherSomeoneServlet</servlet-name>
		<url-pattern>/cron/BaconbotBotherSomeoneServlet</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
        <security-constraint>
        <web-resource-collection>
          <web-resource-name>cron</web-resource-name>
          <url-pattern>/cron/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
          <role-name>admin</role-name>
        </auth-constraint>
        </security-constraint>
        <mime-mapping>
         <extension>html</extension>
         <mime-type>text/html; charset=UTF-8</mime-type>
        </mime-mapping>
</web-app>
